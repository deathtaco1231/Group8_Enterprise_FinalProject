@model EditGameViewModel

@{
    ViewData["Title"] = "Edit game";
}

<form asp-controller="Game"
      asp-action="HandleEditRequest"
      asp-route-id="@Model.GameId"
      method="post"
      enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="GameId" />
    <input type="hidden" asp-for="TournamentId" />

    <div class="form-group">
        <label asp-for="GameDateTime"></label>
        <input type="datetime-local" asp-for="GameDateTime" class="form-control"
               value="@Model.GameDateTime.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="GameDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Team1Name"></label>
        <input type="text" asp-for="Team1Name" class="form-control" />
        <span asp-validation-for="Team1Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Team2Name"></label>
        <input type="text" asp-for="Team2Name" class="form-control" />
        <span asp-validation-for="Team2Name" class="text-danger"></span>
    </div>

    <!-- Optionally, include inputs for scores -->
    <div class="form-group">
        <label>Team 1 Score:</label>
        <input type="number" asp-for="Team1Score" class="form-control" />
    </div>
    <div class="form-group">
        <label>Team 2 Score:</label>
        <input type="number" asp-for="Team2Score" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Tournament"
       asp-action="GetManageForm"
       asp-route-id="@Model.TournamentId"
       class="btn btn-secondary">Cancel</a>
</form>